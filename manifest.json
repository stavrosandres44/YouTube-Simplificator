{
  "manifest_version": 3,
  "name": "YouTube Simplificator",
  "version": "3.1",
  "description": "This extension modifies the HTML of YouTube to simplify the interface.",
  "author": "Stavros",
  "permissions": ["notifications", "storage", "tabs"],
  "host_permissions": ["https://www.youtube.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
